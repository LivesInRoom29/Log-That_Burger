{{!-- Setup the index.handlebars to have the template that Handlebars can render onto.

Create a button in index.handlebars that will submit the user input into the database. --}}

<h2>Add a Burger</h2>

<div class="container">

    <div class="row">
        <form action="" class="create-burger">
            <label for="bname">Burger Name:</label>
            <input type="text" id="bname" name="name">
        </form>
    </div>

    <div class="row">
        <div class="col s6">
            <h2>Burgers to Eat</h2>

            <ul>
                {{#each burgers}}
                    <li>
                        {{this.burger_name}}
                        {{#unless devoured}}
                            {{> burgers/burger-block devoured=0}}
                        {{/unless}}
                    </li>
                {{/each}}
            </ul>

        </div>

        <div class="col s6">
            <h2>Devoured Burgers</h2>

            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=1}}
                    {{/if}}
                {{/each}}
            </ul>

        </div>


    </div>


</div>

