{{!-- Setup the index.handlebars to have the template that Handlebars can render onto.

Create a button in index.handlebars that will submit the user input into the database. --}}



<div class="container">

    <h3>Add a Burger</h3>

    <div class="row">
        <form class="create-burger" method="POST">
            <label for="bname">Burger Name:</label>
            <input type="text" id="bname" name="bname">
            <button type="submit">Add Burger</button>
        </form>
    </div>

    <div class="row">
        <div class="col s6">
            <h3>Burgers to Eat</h3>

            <ul>
                {{#each burgers}}
                    <li>
                        {{this.burger_name}}
                        {{#unless devoured}}
                            {{> burgers/burger-block devoured=false}}
                        {{/unless}}
                    </li>
                {{/each}}
            </ul>

        </div>

        <div class="col s6">
            <h3>Devoured Burgers</h3>

            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>

        </div>


    </div>


</div>

